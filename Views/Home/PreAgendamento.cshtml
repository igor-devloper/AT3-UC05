@model ItemAgendamento


<div class="FormAgendamento">

  <form method="POST">
    <h2>Realize seu Pré-Agendamento</h2>
    <p>
      <label for="Nome">Nome -></label>
      <input asp-for="Nome" placeholder="Nome">
    </p>
    <p>
      <label for="telefone">Numero -></label>
      <input type="tel" id="telefone" class="input-padrao" required placeholder="(xx) xxxxx-xxxx"  asp-for="NumTelefone">
    </p>
    <p>
      <label for="Data">Data -></label>
      <input asp-for="Data" placeholder="Data">
    </p>
    <p>
      <label for="Animal">Animal -></label>
      <select asp-for="Animal">
        <option>Animal</option>
        <option value="Gato">Gato</option>
        <option value="Cachorro">Cachorro</option>
        <option value="Ave">Ave</option>
      </select>
    </p>
    <p>
      <label for="Anima">Nescessidade -></label>
      <textarea class="field" asp-for="Nescessidade" placeholder="Nescessidade"></textarea>
      <label class="field-label"></label>
    </p>



    <input type="submit" value="Realizar Pré-Agendamento">
  </form>
</div>
